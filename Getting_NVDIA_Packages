deb [trusted=yes] https://developer.download.nvidia.com/compute/cuda/repos/debian<version>/x86_64/ /

sudo apt update
sudo apt install nvidia-driver

sudo apt install nvidia-dkms

deb https://developer.download.nvidia.com/compute/cuda/repos/debian<version>/x86_64/ cuda /

sudo apt install cuda-toolkit
